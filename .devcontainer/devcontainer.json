{
    "name": "pokedex",
    "build": {
        "dockerfile": "../tools/docker/Dockerfile",
        "context": "../tools/docker/",
        "args": {"USERNAME": "vscode"}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "yzhang.markdown-all-in-one"
            ]
        }
    },

    "remoteUser": "vscode",
    "privileged": true,
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/home/vscode/workspace",

    "forwardPorts": [8000],

    // Port over the user's shell configurations (assumes all config files are in ~/.config)
    "mounts": [
        "source=/etc/fish/,target=/etc/fish,type=bind,consistency=cached",
        "source=/etc/zsh/,target=/etc/zsh,type=bind,consistency=cached",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config,target=/home/vscode/.config,type=bind,consistency=cached"
    ],

    "postCreateCommand": "sudo sqlite3 ~/workspace/tools/sqlite3/pokedex.db < ~/workspace/tools/sqlite3/pokedex.sql",

    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    }
}