{
    "name": "pokedex",
    "build": {
        "dockerfile": "../tools/docker/Dockerfile",
        "context": "../tools/docker/",
        "args": {"USERNAME": "${localEnv:USER}"}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "yzhang.markdown-all-in-one"
            ]
        }
    },

    "containerUser": "${localEnv:USER}",

    "forwardPorts": [8000],

    // Port over the user's shell configurations (assumes all config files are in ~/.config)
    "mounts": [
        "source=/etc/fish/,target=/etc/fish,type=bind,consistency=cached",
        "source=/etc/zsh/,target=/etc/zsh,type=bind,consistency=cached",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config,target=${localEnv:HOME}${localEnv:USERPROFILE}/.config,type=bind,consistency=cached"
    ],

    "postCreateCommand": "sudo sqlite3 /workspaces/pokedex/tools/sqlite3/pokedex.db < /workspaces/pokedex/tools/sqlite3/pokedex.sql"
}