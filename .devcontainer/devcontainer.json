{
    "name": "pokedex",
    "build": {
        "dockerfile": "../tools/docker/Dockerfile",
        "context": "../tools/docker/"
    },
    
    "remoteUser": "vscode",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode,type=bind",
    "workspaceFolder": "/home/vscode",

    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "rust-lang.rust-analyzer",
                "yzhang.markdown-all-in-one"
            ]
        }
    },

    "forwardPorts": [8000],

    // "mounts": [
    //     "source=${localWorkspaceFolder}/pokedex.sqlite,target=/home/vscode/pokedex,type=bind,consistency=cached"
    // ],

    // "postCreateCommand": "sqlite /tools/sqlite/pokedex.sqlite"
}