{
    "name": "pokedex",
    "build": {
        "dockerfile": "../tools/docker/Dockerfile",
        "context": "../tools/docker/"
    },

    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "rust-lang.rust-analyzer",
                "yzhang.markdown-all-in-one"
            ]
        }
    },

    "forwardPorts": [8000],

    "postCreateCommand": "sqlite3 /workspaces/pokedex/tools/sqlite3/pokedex.db < /workspaces/pokedex/tools/sqlite3/pokedex.sql"
}